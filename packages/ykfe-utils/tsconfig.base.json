{
    "compilerOptions": {
      "target": "ES2015",
      "lib": [
        "esnext",
        "DOM"
      ],
      "declaration": true,
      "jsx": "react",
      "sourceMap": true,
      "outDir": "./bin/",
      "strict": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "rootDir": "./src",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true /* Enables experimental support for emitting type metadata for decorators. */
    },
    "include": [
      "src"
    ]
  }